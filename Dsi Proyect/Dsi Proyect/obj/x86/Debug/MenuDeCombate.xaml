<Page
    x:Class="Dsi_Proyect.MenuDeCombate"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Dsi_Proyect"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="Button">
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="Margin" Value="20"></Setter>
            <Setter Property="Background" Value="#2e1672"></Setter>
            <Setter Property="Foreground" Value="#f9f6dc"></Setter>
            <Setter Property="Width" Value="100"></Setter>
        </Style>
    </Page.Resources>
    <Viewbox>
    <Grid Background="#FF444444">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Image Grid.Column="1" Source="/Assets/InterfazDeCombate.png" Width="300" Height="500"></Image>

            <Rectangle Width="300"></Rectangle>
            <Rectangle Width="200" Height="400" Fill="#8b51f5" Stroke="#130b34"></Rectangle>
            <StackPanel Margin=" 50">
                <Button Content="Play"></Button>
                <Button Content="Objects"></Button>
                <Button Content="Pass"></Button>
                <Button Content="Store"></Button>
                <Button Content="Return"></Button>
            </StackPanel>
            <Rectangle Width="300" Grid.Column="2"></Rectangle>
    </Grid>
    </Viewbox>
</Page>

